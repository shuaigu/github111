// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": [],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"out_trade_no": {
			"bsonType": "string",
			"description": "订单号"
		},
		"article_id": {
			"bsonType": "string",
			"description": "当前发布人文章id",
			"foreignKey": "articleList._id"
		},
		"user_id": {
			"bsonType": "string",
			"description": "当前支付用户的id",
			"foreignKey": "user._id"
		},
		"total_fee": {
			"bsonType": "double",
			"description": "当前充值金额"
		},
		"vip_id": {
			"bsonType": "string",
			"description": "对应的渠道id",
			"foreignKey": "user._id"
		},
		"pay_date": {
			"bsonType": "timestamp",
			"defaultValue": {
				"$env": "now"
			}
		},
		"status": {
			"bsonType": "int",
			"description": "支付状态 0 - 待支付  1 - 已支付  2 - 已取消 3 - 已完成",
			"defaultValue": 0
		}
	}
}