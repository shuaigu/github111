.headInfo .background-gradient.data-v-fb8a6be5 {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #6e8efb, #a777e3);
  z-index: -1;
  animation: 渐变背景-fb8a6be5 15s ease infinite;
  background-size: 400% 400%;
}
@keyframes 渐变背景-fb8a6be5 {
0% {
    background-position: 0% 50%;
}
50% {
    background-position: 100% 50%;
}
100% {
    background-position: 0% 50%;
}
}
